<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iqbalhasan.foodrecomm">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/round_logo_image"
        android:label="@string/app_name"
        android:roundIcon="@drawable/round_logo_image"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.iqbalhasan.foodrecomm.Activity.DeviceScanActivity"></activity>
        <activity android:name="com.iqbalhasan.foodrecomm.Activity.PencarianMakananActivity" />
        <activity android:name="com.iqbalhasan.foodrecomm.Activity.DetailHistoryActivity" />
        <activity android:name="com.iqbalhasan.foodrecomm.Activity.DetailTutorialActivity" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.iqbalhasan.foodrecomm.Activity.MapsActivity"
            android:label="@string/title_activity_restoran_maps" />
        <activity android:name="com.iqbalhasan.foodrecomm.Activity.DetailMakananActivity" />
        <activity android:name="com.iqbalhasan.foodrecomm.Activity.MainActivity" />
        <activity android:name="com.iqbalhasan.foodrecomm.Activity.LoginActivity" />
        <activity android:name="com.iqbalhasan.foodrecomm.Activity.RegisterActivity" />
        <activity android:name="com.iqbalhasan.foodrecomm.Activity.ProfileActivity" />
        <activity android:name="com.iqbalhasan.foodrecomm.Activity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>